<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table id="moviesTable">
    <thead>
      <tr>
        <th>
          <%= link_to "Title", { sort: "title", direction: toggle_direction(params[:sort], params[:direction], "title") } %>
        </th>
        <th>
          <%= link_to "Rating", { sort: "rating", direction: toggle_direction(params[:sort], params[:direction], "rating") } %>
        </th>
        <th>
          <%= link_to "Release Date", { sort: "release_date", direction: toggle_direction(params[:sort], params[:direction], "release_date") } %>
        </th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date %></td>
          <td>
            <%= link_to "Show", movie_path(movie, sort: params[:sort], direction: params[:direction])%>
            <%= link_to "Edit", edit_movie_path(movie, sort: params[:sort], direction: params[:direction]) %>
            <%= link_to "Delete", movie_path(movie, sort: params[:sort], direction: params[:direction]), 
              method: :delete, 
              data: { confirm: "Are you sure?" } %>          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <td><%= link_to "New movie", new_movie_path(sort: params[:sort], direction: params[:direction]) %></td>
</div>
